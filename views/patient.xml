<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- place patient_name in sale.order table -->
    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="patient_name" />
            </field>
        </field>

    </record>


    <!-- Tree view of Patient model -->
    <record id="patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients" editable="bottom">
                <field name="name_seq" />
                <field name="patient_name" />
                <field name="patient_age" />
                <field name="age_group" />
                <field name="gender" />
                <field name="disease" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="open_patient_action_appointments">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('patient_id','=',active_id)]</field>
        <field name="context">{}</field>
    </record>

    <!-- form view of Patient model -->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <header>
                    <button name="%(create_appointment_wizard)d" string='Create Appointment' type="action" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_patient_appointments"
                        type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="id" string="Appointments" widget="statinfo"/>
                        </button>

                        <button name="%(open_patient_action_appointments)d"
                        type="action" class="oe_stat_button" icon="fa-usd">
                            <field name="id" string="Appointments" widget="statinfo"/>
                        </button>

                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;:&quot;archive&quot;}"/>
                        </button>
                    </div>

                <div class="oe_title">
                    <h1>
                        <field name="name_seq" readonly="1" />
                        <field name="image" widget="image" class="oe_avatar"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="patient_name" />
                    </group>
                    <group>
                        <field name="patient_age" />
                    </group>
                </group>
                <group>
                    <group>
                        <field name="gender" />
                    </group>
                    <group>
                        <field name="age_group" />
                    </group>
                </group>

                <group>
                    <field name="notes" />
                </group>
                <notebook>
                     <page string="Disease">
                         <field name="disease">
                             <tree>
                                <field name="disease_name"/>
                                <field name="disease_severity"/>
                                <field name="patient_id" invisible="1"/>


                             </tree>
                         </field>
                     </page>
                 </notebook>
                    
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget='mail_followers'/>
                    <field name="activity_ids" widget='mail_activity'/>
                    <field name="message_ids" widget='mail_thread' options="{'post_refresh':'recipients'}"/>
                </div>               
            </form>
        </field>
    </record>

    <!-- search view patient model -->
    <record id="hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="patient_name" filter_domain="['|',('patient_name','ilike',self),('name_seq','ilike',self)]" />
                <field name="name_seq" />
                <!-- <field name="patient_name" /> -->
                <separator/>
                <filter string='Male' name='male' domain="[('gender', '=', 'male')]" />
                <filter string='Female' name='female' domain="[('gender', '=', 'fe_male')]" />
                <group expand="0" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}" />
                </group>
                <!-- <field name="name_seq" />
                <field name="patient_name" />
                <field name="patient_age" />
                <field name="notes" /> -->
            </search>
        </field>
    </record>


    <!-- action of the patient menu -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="context">{'search_default_male': True}</field>
        <!-- <field name="binding_model_id" ref="model_tab_b"/> -->
<!--        <field name="binding_view_types"/>-->
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
                Create First Patient!
             </p>
        </field>
    </record>

    <menuitem id="hospital_root" name="Hospital" sequence="0" web_icon="vk_hospital.static/description/menu_icon.png"/>
    <menuitem id="patient" name="Patient" parent="hospital_root" action="action_patient" />

</odoo>